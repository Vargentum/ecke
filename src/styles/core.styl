/*------------------------------------*\
    Modal window styles
\*------------------------------------*/

.reveal-modal-bg {
  display: none;
  fixed top left
  size 100%
  background: #b6b2b0;
  opacity .6
  z-index: 100;
}

.reveal-modal {
  visibility: hidden;
  absolute top 50% left 50%
  width: 600px
  margin-left: -(@width / 2)
  margin-top: -(290px /2)
  background-color #fff
  z-index: 101;
  padding: 25px 35px 30px
  border 5px solid #b6b2b0
}

.close-reveal-modal {
  absolute top 10px right 10px
  hide-text()
  font-weight: bold;
  cursor: pointer;
  img('modal-close.png')
  size 9px
}



.callback-modal
  @extend .base-form
  .this__title
    title(27px)
    line-height: 1
    margin-bottom: 20px

  .this__inputLabel
    width: 165px

  .this__input
    width: 340px

  .this__button
    margin-left: 180px
